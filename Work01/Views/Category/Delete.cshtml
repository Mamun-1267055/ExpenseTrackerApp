@model Work01.Models.Category
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-6 ">
        <h2>For Delete categories</h2>
        <form asp-action="Delete">
            <input asp-for="CategoryId" type="hidden" />


            <div class="">
                <label asp-for="Categories" class="form-control-sm col-2">Categories</label>
                <input asp-for="Categories" type="text" class="form-control-sm col-sm-4" placeholder="Expense Date" />

            </div>
           
            <div class="offset-2">
                <button asp-action="Delete" asp-controller="Category" class="btn btn-sm btn-danger" type="submit">Delete</button>

            </div>
        </form>



    </div>


</div>

