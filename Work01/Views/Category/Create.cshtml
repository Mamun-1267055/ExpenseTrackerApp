@model Work01.Models.Category
@{
    ViewData["Title"] = "Create";
}

<div class="row ">
    <div class="col-9 jumbotron " style="color:seagreen;">
       
        <h1 class="bg-light text-center">Insert Expence Category!!</h1>
        <form  class="mb-5 mt-5" asp-action="Create">

            <div class="">
                <label asp-for="Categories" class="form-control-sm col-2">Categories</label>
               
                    <input asp-for="Categories" type="text" class="form-control-sm col-5 " placeholder="Categories" />
                
               
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
               


            </div>

           
            <div class="col offset-2 mb-5">
                <button type="submit" class="btn btn-sm btn-primary ">Save</button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-sm btn-warning">Back to Menu</a>
            </div>

           
        </form>
        

    </div>
    <div class="col-3">
        <div class="jumbotron">
            <h4>User Can Insert the Category but Cannot allow to Insert or Edit the Existing Category</h4>

        </div>
    </div>

</div>

@section Scripts{

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}